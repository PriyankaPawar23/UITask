<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:id="@+id/firstCard"
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"

            >

            <RelativeLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:background="@color/card12345">

                <TextView
                    android:id="@+id/txt1"
                    android:text="New Sponsorship"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_width="175dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/img1"
                    android:layout_below="@id/txt1"
                    android:src="@drawable/cardone"
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />

                <TextView
                    android:id="@+id/txt11"
                    android:text="Reagale"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_below="@id/img1"
                    android:layout_marginStart="10dp"
                    android:layout_width="175dp"
                    android:layout_height="20dp" />



            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-150dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:background="@color/card7"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="175dp"
                android:layout_height="100dp">


                <TextView
                    android:id="@+id/txt7"
                    android:text="Johanna"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt71"
                    android:text="Birthday in 2 months"
                    android:layout_below="@id/txt7"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/txt72"
                    android:text="Give a gift"
                    android:layout_below="@id/txt71"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:background="#77A662"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <!-- Row 2 -->

        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="175dp"
                android:layout_height="150dp">

                <ImageView
                    android:src="@drawable/cardtwo"
                    android:layout_width="175dp"
                    android:layout_height="150dp" />

                <TextView
                    android:text="How to use Amazon Smile and give as you live"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"

                    android:layout_marginTop="100dp"
                    android:background="#C26C33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="-200dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt6"
                    android:text="Weather"
                    android:paddingStart="10dp"
                    android:background="#A3A381"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/weather"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                android:id="@+id/txt61"
                android:text="My community"
                android:background="#A3A381"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:layout_marginTop="175dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <!-- Row 2 -->

        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:background="@color/card12345"
                android:orientation="vertical"
                android:layout_width="175dp"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/txtser"
                    android:text="Sergio"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=" 3 year of sponsorship     Thank You"
                    android:layout_below="@id/txtser"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="-100dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="175dp"
                android:layout_height="200dp"
                android:background="@color/card12345">

                <ImageView
                    android:src="@drawable/cardsix"
                    android:layout_width="175dp"
                    android:layout_below="@id/txtnew"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtnew"
                    android:text="New Photo"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:layout_marginTop="-80dp"
            android:layout_marginStart="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtthank"
                    android:text="Thank You"
                    android:textAlignment="center"
                    android:textColor="@color/card12345"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txtgift"
                    android:text="5 gifts given this year"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_below="@+id/txtthank"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="My Children"
                    android:background="@color/card12345"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/txtgift"
                    android:layout_width="match_parent"
                    android:layout_marginTop="22dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="175dp"
                android:layout_height="175dp">

                <ImageView
                    android:src="@drawable/childseven1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="175dp" />

                <TextView
                    android:text="Join our Togo Ghana insight Trip"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="-200dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:background="@color/cardlast">


            <TextView
                android:id="@+id/txtlast"
                android:text="Sergio"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtlast1"
                android:text="Give Thanks that Sergio receives regular home visits from caring project staff."
                android:layout_below="@id/txtlast"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtlast12"
                android:background="#B64B51"
                android:text="Pray Now"
                android:layout_below="@id/txtlast"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="125dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>